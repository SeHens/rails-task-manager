<!-- app/views/tasks/edit.html.erb -->
<h1>Edit task</h1>

<%= form_with model: @task, local: true do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details %><br>
    <%= f.text_area :details, rows: 2 %>
  </div>

  <div>
    <%= f.submit "Update Task" %>
  </div>
<% end %>

<p>
  <%= link_to "Back to List", tasks_path %>
</p>
